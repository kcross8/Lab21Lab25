@model List<Movie>
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Price</th>
    </tr>
    @foreach (var film in Model)
    {
        <tr>
            <td>@film.Title</td>
            <td>
                $6.99
            </td>
            <td>
                <a href="RemoveMovies?title=@film.Title">Remove from cart.</a>
            </td>
        </tr>
    }
</table>
<h3>
    <a href="Receipt">Checkout.</a>
</h3>
@if (Model.Count < 1)
{
<meta http-equiv="refresh" content="0; url = ClearMovies" />
}
